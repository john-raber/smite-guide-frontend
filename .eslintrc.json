{
  "env": { "browser": true, "jest": true, "es6": true },
  "extends": ["airbnb", "prettier", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": { "ecmaFeatures": { "jsx": true } },
  "plugins": ["prettier", "react"],
  "rules": {
    "import/no-named-as-default": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "none",
        "singleQuote": true,
        "printWidth": 120
      }
    ],
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [".js", ".jsx"]
      }
    ]
  }
}
